{
  "name": "chibi",
  "version": "1.2.0",
  "description": "A little CSS framework",
  "main": "dist/chibi.min.css",
  "scripts": {
    "start": "run-p docs watch",
    "docs": "jekyll s -s docs",
    "build": "rimraf dist/* && yarn postcss &&  cross-env NODE_ENV=production yarn postcss --ext .min.css && gzip -c dist/chibi.min.css  | wc -c | xargs echo 'Size:'",
    "postcss": "postcss ./src/chibi.css -d dist/",
    "watch": "cross-env NODE_ENV=development yarn postcss -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "yarn build"
  },
  "keywords": [
    "css",
    "minimal",
    "web"
  ],
  "author": "Matt McCray / Jenil Gogari",
  "license": "MIT",
  "homepage": "https://github.com/mattmccray/chibi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattmccray/chibi.git"
  },
  "bugs": {
    "url": "https://github.com/mattmccray/chibi/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.7",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-csso": "^4.0.0",
    "postcss-import": "^12.0.1",
    "rimraf": "^3.0.0"
  },
  "files": [
    "src/",
    "dist/",
    "README.md"
  ],
  "browserslist": [
    "last 2 versions"
  ]
}
